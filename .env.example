# Pegasus Info Environment Configuration
# Copy this file to .env and configure as needed

# Logging
LOG_LEVEL=INFO
LOG_FILE=pegasus_info.log

# Rate Limiting
REQUEST_DELAY=1
MAX_RETRIES=3
TIMEOUT=30

# Trending Detection
TRENDING_THRESHOLD=3
TIME_WINDOW_HOURS=24

# Summary Settings
SUMMARY_MAX_LENGTH=500
SUMMARY_MIN_LENGTH=150

# Export Settings
EXPORT_DIR=exports
